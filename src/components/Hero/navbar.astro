---
import Button from '../../components/button.astro'
const menu = [
  {
    href: '#speakers',
    name: 'Speakers',
  },
  {
    href: '#agenda',
    name: 'Agenda',
  },
  {
    href: '#partners',
    name: 'Sponsors',
  },
