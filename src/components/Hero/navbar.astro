    </ul>
  </div>
  <nav class="min-h-20 flex justify-between md:flex-row items-center flex-col">
    <a href="#" class="text-white text-xl font-semibold"> CISSCOM</a>
    <ul class="flex gap-4">
      {
        menu.map(item => (
          <a
            href={item.href}
            class="text-white/80 relative px-2 py-1 hover:text-[hsl(var(--primary))] transition duration-300 
            before:content-normal before:h-[2px] before:w-0 before:rounded-full before:transition-all before:duration-300 before:hover:w-[60%] before:bg-[hsl(var(--primary))] before:absolute before:bottom-0"
          >
            <li>{item.name}</li>
          </a>
        ))
      }
    </ul>
    <a
      href="#"
      class="px-6 hidden md:block py-2 text-sm font-medium hover:opacity-95 transition-opacity rounded-full bg-primary"
      >Registro</a
    >
