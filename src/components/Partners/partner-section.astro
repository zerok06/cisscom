---
import Wrapper from '../wrapper.astro'
const team = [
  {
    name: 'UNAM',
    image: '/assets/logo-u.png',
    job: 'Partner',
  },

  {
    name: 'AI-MARA',
    image: 'https://1000marcas.net/wp-content/uploads/2020/03/Logo-AMD.png',
    job: 'Partner',
  },

  {
    name: 'Sponsor1',
    image: '/assets/logo-u.png',
    job: 'Sponsor',
  },
  {
    name: 'UNAM',
    image: '/assets/logo-u.png',
    job: 'Partner',
  },

  {
    name: 'AI-MARA',
    image: 'https://1000marcas.net/wp-content/uploads/2020/03/Logo-AMD.png',
    job: 'Partner',
  },

  {
    name: 'Sponsor1',
    image: '/assets/logo-u.png',
    job: 'Sponsor',
  },
]
---

<section class="py-12">
  <Wrapper>
    <h2 class="text-3xl text-center font-bold mt-3">Partners y Sponsors</h2>
    <div class="bg-gray-100 rounded-xl relative py-6 px-8 mt-8 overflow-hidden">
      <span
        class="z-10 h-[100%] absolute top-0 left-0 w-[25%] bg-gradient-to-r from-gray-100 to-transparent"
      ></span>
      <ul class="flex gap-8 w-[1800px] partner_left">
        {
          team.map(item => (
            <li class="w-[350px]">
              <img class="h-[150px]" src={item.image} alt={item.name} />
            </li>
          ))
        }
      </ul>
    </div>
  </Wrapper>
</section>
<style>
  .partner_left {
    animation: 5s marquee infinite linear;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }

    to {
      transform: translateX(calc(-50% - 32px / 2));
    }
  }
</style>
