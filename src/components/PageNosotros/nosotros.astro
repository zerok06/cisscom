---
const { name, description, avatar, url } = Astro.props
---

<section
  class="grid grid-cols-1 items-center md:grid-cols-3 md:items-start gap-14 py-10 border-b border-gray-200"
  id={name}
  data-aos="fade-up"
  data-aos-duration="500"
>
  <header>
    <h2 class="text-black text-3xl text-center sm:text-start font-semibold">
      {name}
    </h2>
    <div class="flex justify-center sm:justify-start mt-4">
      <a href={url} target="_blank">
        <svg
          class="text-blue-900"
          xmlns="http://www.w3.org/2000/svg"
          height="2em"
          viewBox="0 0 448 512"
          fill="currentColor"
        >
          <path
            d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"
          ></path></svg
        >
      </a>
    </div>
  </header>
  <section>
    <img
      class="h-[200px] w-[200px] rounded-tr-3xl rounded-lg mx-auto sm:m-0 object-cover object-top"
      src={avatar}
      alt={name}
    />
  </section>
  <main>
    <p class="text-black/60 text-center md:text-start">
      {description}
    </p>
  </main>
</section>
