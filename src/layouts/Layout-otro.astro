---
import '../styles/base.css'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/logo-cisscom.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body>
    <div class="bg-[#2c9391] absolute top-[149.5rem] -z-10 left-[-10rem] h-[31.25rem] w-[10rem] rounded-full blur-[1rem] sm:w-[68.75rem] md:left-[-33rem] lg:left-[-380rem] xl:left-[8.5rem] 2xl:left-[-5rem] dark:bg-[#6ee2e0]"></div>
    <div class="bg-[#2c9391] absolute top-[-25rem] -z-10 left-[-15rem] h-[31.25rem] w-[30rem] rounded-full blur-[15rem] sm:w-[16.75rem] md:left-[-33rem] lg:left-[-25rem] xl:left-[67rem] 2xl:left-[-8rem] dark:bg-[#6ee2e0]"></div>

    <div class="bg-[#4aecea] absolute top-[6rem] -z-10 left-[-2rem] h-[2rem] w-[2rem] rounded-full blur-[1rem] sm:w-[68.75rem] md:left-[-33rem] lg:left-[-380rem] xl:left-[7.5rem] 2xl:left-[-5rem] dark:bg-[#4aecea]"></div>
    
    <div class="bg-[#94e66c] absolute top-[46.9rem] -z-10 left-[-2rem] h-[8rem] w-[2rem] rounded-full blur-[3rem] sm:w-[12rem] md:left-[-38rem] lg:left-[-380rem] xl:left-[11rem] 2xl:left-[-5rem] dark:bg-[#94e66c]"></div>
    <div class="bg-[#94e66c] absolute top-[65rem] -z-10 left-[-2rem] h-[8rem] w-[2rem] rounded-full blur-[3rem] sm:w-[12rem] md:left-[-38rem] lg:left-[-380rem] xl:left-[11rem] 2xl:left-[-5rem] dark:bg-[#94e66c]"></div>
    <div class="bg-[#94e66c] absolute top-[83rem] -z-10 left-[-2rem] h-[8rem] w-[2rem] rounded-full blur-[3rem] sm:w-[12rem] md:left-[-38rem] lg:left-[-380rem] xl:left-[11rem] 2xl:left-[-5rem] dark:bg-[#94e66c]"></div>

    <slot />
  </body>
  <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script is:inline>
    AOS.init()
  </script>
</html>
